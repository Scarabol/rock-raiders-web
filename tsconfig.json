{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2021",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": false, // XXX Improve null/undefined handling
    "noImplicitAny": false, // XXX remove exception for config parsing
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
